{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmitOnError": true,
    "declaration": false
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}